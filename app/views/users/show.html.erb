<% provide(:title, @user.name) %>
<% if user_signed_in? %>
  <h1>Welcome <%=@user.name %>!</h1>
        <div class="col-md-6 col-md-offset-3">
        <% if !@user.stories.empty? %>
            <p>Below you will find the stories you created!</p>
            <ul>
                <% @user.stories.each do |story| %>
                    <li><%= link_to story.title, story %></li>
                <% end %>
            </ul>
        <% else %>
            <p>It looks like you don't have any active stories! Visit the stories page to view available stories and make your very first contribution.</p>
            <%= link_to "Take me to stories.", stories_path %>
        <% end %>
        </div>

  

<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>

