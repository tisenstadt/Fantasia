<% if @story.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            Please correct the following <%= pluralize(@story.errors.count, "error") %> and resubmit your story!
        </div>
        <ul>
            <% @story.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>