<% provide(:title, 'New Page') %>

<h1>Time to write a page! Submit a title for the page, and click submit.</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@page) do |f| %>
          
        <%= hidden_field_tag :story_id, @story.id %>
        
        <%= f.label :page_title %>
        <%= f.text_field :page_title %>
        
        <%= f.label :content %>
        <%= f.text_field :content %>
        
        <%= f.submit "Submit my page!", class: "btn btn-primary" %>
    <% end %>
    </div>
</div>



